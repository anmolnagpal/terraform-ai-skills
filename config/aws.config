# AWS Provider Configuration
# For repositories: github.com/clouddrove/terraform-aws-*

# Organization Configuration
ORG_NAME="clouddrove"
ORG_GITHUB_URL="https://github.com/clouddrove"
PROVIDER_NAME="aws"

# Version Configuration
TERRAFORM_MIN_VERSION="1.10.0"
TERRAFORM_RECOMMENDED_VERSION="~> 1.10"
PROVIDER_MIN_VERSION="5.80.0"  # Latest AWS provider
PROVIDER_RECOMMENDED_VERSION="~> 5.80"

# Repository Pattern
REPO_PATTERN="terraform-aws-*"

# Exclude Patterns
EXCLUDE_REPOS="terraform-aws-template terraform-aws-backup"

# GitHub Actions Configuration
WORKFLOW_SHA="88efd7724e007c8f721a219498be29e0c9ad471b"
SHARED_WORKFLOWS_REPO="clouddrove/github-shared-workflows"

# Changelog Configuration
USE_EMOJIS=true
EMOJI_LEGEND=true

# Release Configuration
AUTO_TAG=true
TAG_PREFIX="v"
SEMANTIC_VERSIONING=true

# Validation Configuration
RUN_TERRAFORM_VALIDATE=true
RUN_TERRAFORM_FMT=true
CHECK_WORKFLOWS=true
RUN_TFLINT=true
RUN_TFSEC=true

# Branch Configuration
DEFAULT_BRANCH="master"
CREATE_PR=true

# Notification
NOTIFY_ON_COMPLETE=false
SLACK_WEBHOOK_URL=""
