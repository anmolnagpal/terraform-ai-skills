# AWS Provider Configuration
# CUSTOMIZE THIS: Replace with your organization and module patterns

# Organization Configuration
ORG_NAME="your-org"  # TODO: Change to your GitHub organization
ORG_GITHUB_URL="https://github.com/your-org"
PROVIDER_NAME="aws"

# Version Configuration
TERRAFORM_MIN_VERSION="1.10.0"
TERRAFORM_RECOMMENDED_VERSION="~> 1.10"
PROVIDER_MIN_VERSION="5.80.0"  # Latest AWS provider
PROVIDER_RECOMMENDED_VERSION="~> 5.80"

# Repository Pattern
REPO_PATTERN="terraform-aws-*"  # TODO: Adjust to match your naming convention

# Exclude Patterns
EXCLUDE_REPOS="terraform-aws-template terraform-aws-archived"  # TODO: Add repos to skip

# GitHub Actions Configuration (Optional)
WORKFLOW_SHA=""  # TODO: Add SHA if using shared workflows
SHARED_WORKFLOWS_REPO=""  # TODO: e.g., "your-org/github-shared-workflows"

# Changelog Configuration
USE_EMOJIS=true
EMOJI_LEGEND=true

# Release Configuration
AUTO_TAG=true
TAG_PREFIX="v"
SEMANTIC_VERSIONING=true

# Validation Configuration
RUN_TERRAFORM_VALIDATE=true
RUN_TERRAFORM_FMT=true
CHECK_WORKFLOWS=true
RUN_TFLINT=true
RUN_TFSEC=true

# Branch Configuration
DEFAULT_BRANCH="master"
CREATE_PR=true

# Notification
NOTIFY_ON_COMPLETE=false
SLACK_WEBHOOK_URL=""
