# Azure Provider Configuration
# For repositories: github.com/terraform-az-modules/terraform-azurerm-*

# Organization Configuration
ORG_NAME="terraform-az-modules"
ORG_GITHUB_URL="https://github.com/terraform-az-modules"
PROVIDER_NAME="azurerm"

# Version Configuration
TERRAFORM_MIN_VERSION="1.10.0"
TERRAFORM_RECOMMENDED_VERSION="~> 1.10"
PROVIDER_MIN_VERSION="4.20.0"  # Latest AzureRM provider
PROVIDER_RECOMMENDED_VERSION="~> 4.20"

# Repository Pattern
REPO_PATTERN="terraform-azurerm-*"

# Exclude Patterns
EXCLUDE_REPOS="terraform-azurerm-template"

# GitHub Actions Configuration
WORKFLOW_SHA="88efd7724e007c8f721a219498be29e0c9ad471b"
SHARED_WORKFLOWS_REPO="clouddrove/github-shared-workflows"

# Changelog Configuration
USE_EMOJIS=true
EMOJI_LEGEND=true

# Release Configuration
AUTO_TAG=true
TAG_PREFIX="v"
SEMANTIC_VERSIONING=true

# Validation Configuration
RUN_TERRAFORM_VALIDATE=true
RUN_TERRAFORM_FMT=true
CHECK_WORKFLOWS=true
RUN_TFLINT=true
RUN_TFSEC=true

# Branch Configuration
DEFAULT_BRANCH="master"
CREATE_PR=false

# Notification
NOTIFY_ON_COMPLETE=false
SLACK_WEBHOOK_URL=""
