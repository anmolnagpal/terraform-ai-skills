# Global Configuration for Terraform Module Management
# This is the base config - use provider-specific configs for each cloud

# Organization Configuration
ORG_NAME="your-org"  # TODO: Change to your GitHub organization
PROVIDER_NAME="global"

# Version Configuration (Updated to latest stable)
TERRAFORM_MIN_VERSION="1.10.0"
TERRAFORM_RECOMMENDED_VERSION="~> 1.10"
PROVIDER_MIN_VERSION="0.0.0"

# GitHub Configuration
GITHUB_ORG_CLOUDDROVE="your-org"
GITHUB_ORG_AZURE="your-org"

# Repository Pattern
# Pattern to match repository names (glob pattern)
REPO_PATTERN="terraform-${PROVIDER_NAME}-*"

# Exclude Patterns
# Repositories to skip (space-separated)
EXCLUDE_REPOS="terraform-do-modules terraform-do-reference"

# GitHub Actions Configuration
WORKFLOW_SHA=""  # TODO: Add SHA if using shared workflows
SHARED_WORKFLOWS_REPO=""  # TODO: e.g., "your-org/github-shared-workflows"

# Changelog Configuration
USE_EMOJIS=true
EMOJI_LEGEND=true

# Release Configuration
AUTO_TAG=true
TAG_PREFIX="v"
SEMANTIC_VERSIONING=true

# Validation Configuration
RUN_TERRAFORM_VALIDATE=true
RUN_TERRAFORM_FMT=true
CHECK_WORKFLOWS=true

# Branch Configuration
DEFAULT_BRANCH="master"
CREATE_PR=false  # Set to true to create PRs instead of direct commits

# Notification (optional)
NOTIFY_ON_COMPLETE=false
SLACK_WEBHOOK_URL=""
